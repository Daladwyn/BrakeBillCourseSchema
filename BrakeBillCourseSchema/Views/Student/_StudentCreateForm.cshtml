    {
        UpdateTargetId = "StudentCreate",
        InsertionMode = InsertionMode.ReplaceWith,
    })
  
<div id="StudentCreate">
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
