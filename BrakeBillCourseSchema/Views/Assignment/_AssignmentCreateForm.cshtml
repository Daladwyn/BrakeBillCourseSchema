@model IEnumerable<BrakeBillCourseSchema.Models.Course>

@using (Ajax.BeginForm("AssignmentCreate", "Assignment",
ajaxOptions: new AjaxOptions
{
    UpdateTargetId = "AssignmentIndex",
    InsertionMode = InsertionMode.ReplaceWith,
}))
{
    <div class="form-horizontal">
        <h4>Create a new assignment:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    Assignments name: @Html.Editor("AssignmentName")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    Assignments description: @Html.Editor("Description")
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-3">
                    Which course to attend: <select name="Courseid">
                        @foreach (var item in Model)
                        {
                            <option value="@item.CourseId">@item.CourseName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-3">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Ajax.ActionLink("Back to List", "Assignments", "Home",
    ajaxOptions: new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "AssignmentIndex",
    })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



