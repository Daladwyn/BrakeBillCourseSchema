@model IEnumerable<BrakeBillCourseSchema.Models.Course>

@using (Ajax.BeginForm("TeacherCreate", "Teacher",
ajaxOptions: new AjaxOptions
{
    UpdateTargetId = "TeacherCreate",
    InsertionMode = InsertionMode.ReplaceWith,
}))
{
    <div class="form-horizontal">
        <h4>Register a new Teacher:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    Teachers firstname: @Html.Editor("Firstname")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    Teachers lastname: @Html.Editor("Lastname")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    Which course to lead: <select name="id">
                        @foreach (var item in Model)
                        {
                            <option value="@item.CourseId">@item.CourseName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-3">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Ajax.ActionLink("Back to List", "Index2", "Teacher",
    ajaxOptions: new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "TeacherIndex",
    })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

