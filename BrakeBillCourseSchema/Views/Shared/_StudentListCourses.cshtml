@model BrakeBillCourseSchema.Models.Student

<ul class="row" id="@("StudentId" + Model.StudentId)">
    <li class="col-md-3">
        @Html.DisplayFor(modelItem => Model.Firstname)
    </li>
    <li class="col-md-3">
        @Html.DisplayFor(modelItem => Model.Lastname)
    </li>
    <li class="col-md-3">
        @Ajax.ActionLink("Hide Courses", "ShowStudent", "Student", new { id = Model.StudentId },
       ajaxOptions: new AjaxOptions
       {
           UpdateTargetId= "StudentId" + Model.StudentId,
           InsertionMode= InsertionMode.ReplaceWith
       }) |
    </li>
    <li class="col-md-3"></li>
    <li class="rowbreak"></li>
    @foreach (var Courseitem in Model.StudentCourses)
    {
        <li class="row"></li>
        <li class="col-md-2">Course name:</li>
        <li class="col-md-4">@Courseitem.CourseName</li>
        <li class="col-md-2">Description:</li>
        <li class="col-md-4">@Courseitem.Description</li>
        <li class="rowbreak"></li>
    }
    </ul>